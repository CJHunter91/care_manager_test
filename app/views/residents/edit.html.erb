<article id="resident-edit" class="main-view">

<h4>Edit Resident</h4>
  <%= form_for :resident, url: {action: 'update'}, method: :put do |form| %>
  <%= form.text_field :first_name, :required => true  %>
  <%= form.text_field :last_name, :required => true  %>
  <%= form.date_field :dob, :required => true  %>
  <label>Room Number: 
  <%= form.select :room_id, options_from_collection_for_select(@rooms, 'id', 'room_no') %>
  </label>
  <%= form.submit "Add", :class => "btn" %>
  <% end %> 
</article>