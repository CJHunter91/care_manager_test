<!DOCTYPE html>
<html>
<head>
  <title>CareManagerApp</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header>
    <h2>Care Manager</h2>
  </header>
  <section id="main">
    <nav>
      <ul>
        <li id="rooms-nav">
          <%= link_to "Rooms", rooms_path%>
          <ul>
            <li id="add-room-nav" class="hidden"><%= link_to "Add Room", rooms_new_path %></li>
          </ul>
        </li>
        <li id="residents-nav">
          <%= link_to "Residents", root_path%>
          <ul>
            <li id="add-resident-nav" class="hidden"><%= link_to "Add Resident", residents_new_path %></li>
          </ul>
        </li>
      </ul>
    </nav>
    <%= yield %>
  </section>
</body>
</html>
